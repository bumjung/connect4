extends base

block content
	.container(id="main-content")
		.row
			.col-md-3
				.p1-score
					i(class="fa fa-trophy") &nbsp;
					span 0

			#board.col-md-6
				table.center-table
				.form-group(id="room-url")
					label(for="shareUrl").col-md-3.control-label.share-label Share URL:
					.col-md-7
						input(style="display:inline-block;" type='text', data-room=share, name='shareUrl', value=shareURL ReadOnly).form-control
						i(id="help" rel="tooltip" class="fa fa-question-circle" data-toggle="tooltip" data-placement="right" title="Copy the link to your friend !")
			.col-md-3
				.p2-score
					i(class="fa fa-trophy") &nbsp;
					span 0
